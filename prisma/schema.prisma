// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id_user         String     @id @default(uuid())
  nombre_completo String
  num_cedula      String @unique
  telefono        String @unique
  role            ROLE?      @default(USER)
  bookings        Reservas[]
  updatedAt       DateTime?   @updatedAt

  @@index([id_user, num_cedula, telefono])
  @@map("usuarios")
}

model Reservas {
  id_reservas String          @id @default(uuid())
  fecha      DateTime
  vehiculoId String
  userId     String
  subtotal   Float
  itbis      Float
  total      Float
  status     STATUS_BOOKING? @default(PENDING)
  factura    Factura[]
  updatedAt  DateTime?        @updatedAt

  vehiculosRelation Vehiculo @relation(fields: [vehiculoId], references: [id_car])
  UserRelation      Usuarios    @relation(fields: [userId], references: [id_user])

  @@index([id_reservas, status])
  @@map("reservas")
}

model Vehiculo {
  id_car   String     @id @default(uuid())
  marcaId  String
  modelo String
  age      Int
  n_chasis String
  precio_alquiler Float
  kilometraje Int
  cant_pasajeros Int
  placa String
  categoria TIPO_VEHICULO
  status STATUS_DISPONIBILIDAD? @default(DISPONIBLE)
  traccion TRACCION? @default(DELANTERA)
  updatedAt  DateTime?        @updatedAt
  reservas Reservas[]

  marcasRelation Marca_Vehiculo @relation(fields: [marcaId], references: [id_marca])

  @@index([id_car, age, status])
  @@map("vehiculos")
}

model Marca_Vehiculo {
  id_marca  String     @id @default(uuid())
  marca     String
  vehiculos Vehiculo[]

  @@index([marca])
  @@map("marca_vehiculo")
}

model Factura {
  id_factura String   @id @default(uuid())
  userId     String   @unique
  fecha      DateTime
  vehiculoId String
  bookingId  String

  bookingsRelation Reservas @relation(fields: [bookingId], references: [id_reservas])

  @@index([id_factura])
  @@map("facturas")
}

enum STATUS_BOOKING {
  PENDING
  SUCCESS
  DECLINE
  PAY_PAYMENT
}

enum ROLE {
  ADMIN
  USER
}
enum STATUS_DISPONIBILIDAD {
  DISPONIBLE
  EN_USO
  MANTENIMIENTO
  FUERA_DE_SERVICIO
  EN_REPARACION
}

enum COMBUSTIBLE {
  GASOLINA
  DIESEL
  GAS_NATURAL
  GAS_PROPANO
}
enum TIPO_VEHICULO {
  SEDAN
  JEEPETAS
  FAMILIAR
  OFF_ROAD
  DELUXE
}

enum TRACCION {
  DELANTERA
  TRASERA
  TOTAL
}
